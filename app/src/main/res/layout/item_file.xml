<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="25dp"
    android:paddingVertical="20dp"
    android:background="@drawable/bg_item_call"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_icon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:padding="8dp" android:contentDescription="@null"
            android:background="@color/brand_primary_container"
            app:tint="@color/brand_on_primary"
            tools:src="@drawable/ic_mic" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="18sp" android:textStyle="bold"
        android:textColor="@color/on_surface_dark"
        android:maxLines="1" android:ellipsize="end"
        tools:text="010-1234-5678"
        app:layout_constraintStart_toEndOf="@id/cv_icon"
        app:layout_constraintEnd_toStartOf="@id/tv_meta"
        app:layout_constraintTop_toTopOf="parent"/>

<!--    <View-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->

    <TextView
        android:id="@+id/tv_meta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/subtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        tools:text="20분 전"/>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:maxLines="1" android:ellipsize="end"
        android:textColor="@color/on_surface"
        app:layout_constraintStart_toEndOf="@id/cv_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="한 줄 요약은 여기에 기재"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:progressTint="@color/brand_primary_container"
        app:layout_constraintStart_toEndOf="@id/cv_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:visibility="gone"
        tools:progress="30"/>


</androidx.constraintlayout.widget.ConstraintLayout>