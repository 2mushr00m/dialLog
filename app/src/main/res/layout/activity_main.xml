<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Top Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleTextColor="@color/on_surface_variant"
            app:titleTextAppearance="@style/TextAppearance.DialLog.ToolbarTitle"
            app:titleCentered="false"
            app:navigationIcon="@null"
            app:navigationIconTint="@color/teal_200"
            app:contentInsetStartWithNavigation="0dp"
            app:menu="@menu/menu_main"
            tools:menu="@menu/menu_main"/>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include layout="@layout/status_view"/>
        <include layout="@layout/status_empty" android:visibility="gone"/>
        <include layout="@layout/status_error" android:visibility="gone"/>
    </FrameLayout>

<!--    &lt;!&ndash;  목록  &ndash;&gt;-->
<!--    &lt;!&ndash;  로딩  &ndash;&gt;-->
    <ProgressBar
        android:id="@+id/pb_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <!--  빈 상태  -->
    <LinearLayout
        android:id="@+id/view_empty"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/msg_empty"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/msg_add_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_pickFolder"
            android:text="폴더 지정"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_seedSample"
            android:text="파일 추가"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>