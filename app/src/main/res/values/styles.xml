<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>



    <style name="TextAppearance.DialLog.ToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.DialLog.SectionHeader" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:textSize">18sp</item>
    </style>



    <style name="ItemTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ItemMeta" parent="">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
